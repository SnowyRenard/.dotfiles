{
  "hyprland/workspaces": {
    "on-click": "activate",
    "active-only": false,
    "all-outputs": true,
    "formats": "{id}",
    "max-length": 1,
  },

  "hyprland/window": {
    "max-length": 200,
    "seperate-outputs": true,
  },

  "sway/workspaces": {
    "on-click": "activate",
    "active-only": false,
    "all-outputs": true,
    "formats": "{id}",
    "max-length": 1,
  },

  "sway/window": {
    "max-length": 200,
    "seperate-outputs": true,
  },

  "tray": { "spacing": 10, },

  "clock": {
    "format-alt": "{:%Y年 %m月 %d日}",
    "tooltip": false,
  },

  "backlight": {
    "format": "{icon}",
    "format-icons": [ "", "", "", "", "", "", "", "", "", ],
    "format-alt": "{percent}% {icon}",
    "tooltip": false,
  },

  "battery": {
    "states": {
      "warning": 30,
      "critical": 15
    },
    "format": "{icon}",
    "format-charging": "{capacity}% 󱐋",
    "format-plugged": "{capacity}% ",
    "format-alt": "{capacity}% {icon}",
    "format-icons": [ "󰁺", "󰁻", "󰁼", "󰁽", "󰁾", "󰁿", "󰂀", "󰂁", "󰂂", "󰁹", ],
    "tooltip": true,
    "tooltip-format": "{time}",
  },

  "network": {
    "format-wifi": "",
    "format-ethernet": "",
    "format-alt": "{signalStrength}% ",
    "format-disconnected": "Disconnected ⚠",
    "tooltip-format-wifi": "{essid}",
    "tooltip": false,
  },

  "pulseaudio": {
    "format": "{icon}",
    "format-alt": "{volume}% {icon}",
    "format-bluetooth": "{volume}% {icon} {format_source}",
    "format-bluetooth-muted": " {icon} {format_source}",
    "format-muted": " {format_source}",
    "format-icons": { "default": [ "", "", "", ], },
    "tooltip": false,
  },
}
